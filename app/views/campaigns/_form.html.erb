<div class="translucent-form-overlay">
  <%= form_with(model: campaign) do |form| %>
    <% if campaign.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

        <ul>
          <% campaign.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h3>create/edit</h3>
    <div>
      <%=form.number_field :user_id, id: :campaign_user_id, value: current_user.id, type: :hidden %>
    </div>

    <div class="row columns">
      <%= form.label :name, style: "display: block" do %>
        <%= form.text_field :name %>
      <% end %>
    </div>

    <div>
      <%= form.submit class:"base-submit-button primary button expanded search-button" %>
    </div>
  <% end %>
</div>