<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="links">
    <ul>
      <li class="link-item"><%= link_to "add a link", new_campaign_useful_link_path(@campaign) %></li>
      <% if @campaign.useful_links.each do |link|%>
        <li class="link-item"><a href="<%= link.url %>" target="_blank"><%= link.name %></a></li>
      <% end.empty? %>
        <li class="link-item">No links</li>
      <% end%>
    <ul>
  </div>
  <div class="notes">
    <ul>
      <li class="note-item"><%= link_to "add a note", new_campaign_note_path(@campaign) %></li>
      <% if @campaign.notes.each do |note| %>
        <li class="note-item">
          <h4><%= note.note_heading %></h4>
          <%= note.content %>
        </li>
      <% end.empty? %>
        <li class="note-item">No notes</li>
      <% end %>
  </div>
  <div class="utility">
    <ul class="utility-list">
      <h2><%= @campaign.name%></h2>
      <li><%= link_to "Campaign edit", edit_campaign_path(@campaign)%></li>
      <li><%= link_to "Delete campaign", @campaign, data: {turbo_method: :delete, turbo_confirm: "For realsies?"} %></li>
      <li><%= link_to "Notes", campaign_notes_path(@campaign) %></li>
      <li><%= link_to "Links", campaign_useful_links_path(@campaign) %></li>
      <li><%= link_to "Campaign members", campaign_campaign_members_path(@campaign) %></li>
    <ul>
  </div>
</div>