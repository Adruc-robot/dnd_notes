<h2>Edit <%= resource_name.to_s.humanize %></h2>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-icons">
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-group-field", placeholder:"Email" %>
    </div>
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <%= f.text_field :user_name, class:"input-group-field", placeholder:"Username" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password change - leave blank if you don't want to change; Password - (" + @minimum_password_length.to_s + " characters minimum)",class:"input-group-field" %>
    </div>
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm your password change",class:"input-group-field" %>
    </div>

    

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "You gotta enter your old password if you want to make any changes - Canadian sorry",class:"input-group-field" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
