<h2>Sign up</h2>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-icons">
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-group-field", placeholder:"Email" %>
    </div>
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <%= f.text_field :user_name, class:"input-group-field", placeholder:"Username" %>
    </div>


    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password - (" + @minimum_password_length.to_s + " characters minimum)",class:"input-group-field" %>
    </div>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input-group-field",placeholder:"Password confirm" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
